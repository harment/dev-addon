{
    "legacy_addon_id": "XBTTracker",
    "title": "XBT Torrent Tracker Integration",
    "description": "Integrates XBT Torrent Tracker with XenForo forums, allowing users to share and download torrents with ratio tracking and bonus points system.",
    "version_id": 1000070,
    "version_string": "1.0.0",
    "dev": "Harment",
    "dev_url": "http://arabicsource.ddns.net/",
    "faq_url": "http://arabicsource.ddns.net/help/xbttracker",
    "support_url": "http://arabicsource.ddns.net/forums/xbttracker-support",
    "extra_urls": {
        "Documentation": "http://arabicsource.ddns.net/help/xbttracker/documentation",
        "Wiki": "http://arabicsource.ddns.net/help/xbttracker/wiki"
    },
    "require": {
        "XF": "2030670"
    },
    "icon": "fa-magnet",
    "class_extensions": {
        "XF\\Pub\\Controller\\Account": "Harment\\XBTTracker\\XF\\Pub\\Controller\\Account",
        "XF\\Admin\\Controller\\User": "Harment\\XBTTracker\\XF\\Admin\\Controller\\User",
        "XF\\Admin\\Controller\\AddOn": "Harment\\XBTTracker\\XF\\Admin\\Controller\\AddOn",
        "XF\\Entity\\User": "Harment\\XBTTracker\\XF\\Entity\\User"
    },
    "entity_structure_classes": {
        "Harment\\XBTTracker:Torrent": "Harment\\XBTTracker\\Entity\\Torrent",
        "Harment\\XBTTracker:UserOptions": "Harment\\XBTTracker\\Entity\\UserOptions",
        "Harment\\XBTTracker:UserStats": "Harment\\XBTTracker\\Entity\\UserStats",
        "Harment\\XBTTracker:Category": "Harment\\XBTTracker\\Entity\\Category",
        "Harment\\XBTTracker:Peer": "Harment\\XBTTracker\\Entity\\Peer"
    },
    "admin_navigation": {
        "xbtTracker": {
            "link": "torrents",
            "icon": "fa-magnet",
            "parent": "",
            "display_order": 110,
            "admin_permission": "xbtTracker"
        },
        "xbtTorrents": {
            "link": "torrents/torrents",
            "icon": "fa-list",
            "parent": "xbtTracker",
            "display_order": 110,
            "admin_permission": "xbtTracker"
        },
        "xbtCategories": {
            "link": "torrents/categories",
            "icon": "fa-folder",
            "parent": "xbtTracker",
            "display_order": 120,
            "admin_permission": "xbtTracker"
        },
        "xbtUserStats": {
            "link": "torrents/users",
            "icon": "fa-user-chart",
            "parent": "xbtTracker",
            "display_order": 130,
            "admin_permission": "xbtTracker"
        },
        "xbtSettings": {
            "link": "torrents/settings",
            "icon": "fa-cog",
            "parent": "xbtTracker",
            "display_order": 140,
            "admin_permission": "xbtTracker"
        }
    },
    "admin_permissions": {
        "xbtTracker": {
            "copy_from": "general"
        }
    },
    "options": "xbtTracker",
    "permissions": {
        "xbtTracker": {
            "view": {"default": "allow"},
            "download": {"default": "allow"},
            "upload": {"default": "allow", "depend": "view"},
            "edit": {"default": "allow", "depend": "upload"},
            "delete": {"default": "allow", "depend": "upload"},
            "moderateTorrents": {"default": false}
        }
    },
    "navigation": {
        "torrents": {
            "parent_navigation_id": "forums",
            "display_order": 110,
            "link": "torrents",
            "icon": "fa-magnet",
            "admin_permission": "xbtTracker"
        },
        "uploadTorrent": {
            "parent_navigation_id": "torrents",
            "display_order": 120,
            "link": "torrents/upload",
            "icon": "fa-upload",
            "admin_permission": "xbtTracker"
        }
    },
    "route_prefixes": {
        "public": {
            "torrents": "torrents"
        },
        "admin": {
            "torrents": "torrents"
        }
    },
    "route_filters": {
        "public": "Harment\\XBTTracker\\Route",
        "admin": "Harment\\XBTTracker\\Route"
    },
    "cron": {
        "xbtUpdateStats": {
            "cron_class": "Harment\\XBTTracker\\Cron\\UpdateStats",
            "cron_method": "updateStats",
            "run_rules": {
                "minutes": [0, 15, 30, 45]
            }
        },
        "xbtCheckHitAndRun": {
            "cron_class": "Harment\\XBTTracker\\Cron\\HitAndRun",
            "cron_method": "checkHitAndRun",
            "run_rules": {
                "hours": [0, 6, 12, 18]
            }
        },
        "xbtAwardBonusPoints": {
            "cron_class": "Harment\\XBTTracker\\Cron\\BonusPoints",
            "cron_method": "awardBonusPoints",
            "run_rules": {
                "hours": "*"
            }
        }
    },
    "code_event_listeners": {
        "app_setup": {
            "callback_class": "Harment\\XBTTracker\\Listener",
            "callback_method": "appSetup"
        },
        "entity_structure": {
            "callback_class": "Harment\\XBTTracker\\Listener",
            "callback_method": "entityStructure"
        },
        "navigation_tabs": {
            "callback_class": "Harment\\XBTTracker\\Listener",
            "callback_method": "navigationTabs"
        },
        "template_hook": {
            "callback_class": "Harment\\XBTTracker\\Listener",
            "callback_method": "templateHook"
        }
    },
    "widget_definitions": {
        "xbt_latest_torrents": "Harment\\XBTTracker\\Widget\\LatestTorrents",
        "xbt_tracker_stats": "Harment\\XBTTracker\\Widget\\TrackerStats",
        "xbt_top_torrents": "Harment\\XBTTracker\\Widget\\TopTorrents",
        "xbt_user_stats": "Harment\\XBTTracker\\Widget\\UserStats"
    }
}